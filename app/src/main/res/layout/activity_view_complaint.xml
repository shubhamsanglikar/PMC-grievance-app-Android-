<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:paddingBottom="0dp"
    tools:context="com.mitcoe.shubhamsanglikar.avayasmartcityproject.ViewComplaintActivity"
    android:background="#b6b6b6"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:contentDescription="+"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title here"
        android:id="@+id/txttitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Area: Hadapsar"
        android:id="@+id/txtarea"
        android:layout_below="@+id/txttype"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:textColor="#ff000000"
        android:textStyle="normal|bold"
        style="@style/Animation.AppCompat.Dialog"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category: Road"
        android:id="@+id/txttype"
        android:layout_below="@+id/txtcid"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:textColor="#ff000000"
        android:textStyle="normal|bold"
        style="@style/Animation.AppCompat.Dialog"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upvotes: 25"
        android:id="@+id/txtupvotes"
        android:layout_below="@+id/txtcid"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:textColor="#ff000000"
        android:textStyle="normal|bold"
        style="@style/Animation.AppCompat.Dialog"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Complaint ID: 105"
        android:id="@+id/txtcid"
        android:layout_below="@+id/txttitle"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No response from government yet!"
        android:id="@+id/txtgov_response"
        android:layout_alignParentBottom="true"
        android:background="#fe060402"
        android:textColor="#ffffff"
        android:paddingTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status: Not yet considered"
        android:id="@+id/txtstatus"
        android:padding="5dp"
        android:layout_below="@+id/txtarea"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textStyle="normal|bold"
        style="@style/Animation.AppCompat.Dialog"
        android:typeface="serif" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description\nThis is description of the complaint.s"
        android:id="@+id/txtdescription"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:textSize="18dp"
        android:textColor="#ff000000"
        android:layout_above="@+id/txtgov_response"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:typeface="serif"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView"
        android:layout_below="@+id/txtstatus"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:textColor="#ff000000"
        android:textStyle="normal|bold"
        android:typeface="serif" />
</RelativeLayout>
